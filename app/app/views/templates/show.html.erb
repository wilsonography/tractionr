<h1>/Template</h1>

<p>
  <b>Title</b><br>
  <%= @template.title %>
</p>

<p>
  <b>Description</b><br>
  <%= @template.description %>
</p>

<p>
  <b>Created by</b><br>
  <%= @template.creator.name %>
</p>

<p>
  <b>Account</b><br>
  <%= @template.account.name %>
</p>

<div class="form-actions">
  <%= link_to 'Back', templates_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_template_path(@template), :class => 'btn' %>
  <%= link_to 'Delete', template_path(@template), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
