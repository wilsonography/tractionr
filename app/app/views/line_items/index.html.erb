<h1>Line Items</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Description</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.id %></td>
        <td><%= link_to line_item.description, line_item_path(line_item) %></td>
        <td><%= line_item.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_line_item_path(line_item), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', line_item_path(line_item), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_line_item_path, :class => 'btn btn-primary' %>
