<h1>Attachments</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @attachments.each do |attachment| %>
      <tr>
        <td><%= attachment.id %></td>
        <td><%= link_to attachment.title, attachment_path(attachment) %></td>
        <td><%= attachment.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_attachment_path(attachment), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', attachment_path(attachment), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_attachment_path, :class => 'btn btn-primary' %>
