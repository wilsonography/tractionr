<% parent.comments.each do |c| %>
	<div class="well">
		<%= c.text %><br />
		<em><small>by <%= c.creator.name %></small></em>
	</div>
<% end %>

<%= form_for comment, :remote => true, :html => { :'data-type' => 'html', :class => 'form-vertical' } do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label :text, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :text, :class => 'text_field' %>
      </div>
      
        <%= f.hidden_field :commentable_type, :value => comment.commentable_type %>
        <%= f.hidden_field :commentable_id, :value => comment.commentable_id %>
    </div>
       
      <%= f.submit nil, :class => 'btn btn-primary', :disable_with => 'Commentingâ€¦' %>

  </fieldset>
<% end %>
